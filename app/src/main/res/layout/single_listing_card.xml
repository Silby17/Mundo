<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="200dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/listingImg"
            android:layout_width="170dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/tvListingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listingImg"
            android:text="Sample title"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvListingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Location"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_below="@+id/tvListingTitle"/>

        <TextView
            android:id="@+id/tvListingPrice"
            android:layout_below="@+id/tvListingLocation"
            android:text="$17.65"
            android:layout_marginTop="1dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>